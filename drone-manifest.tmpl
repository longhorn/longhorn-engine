image: longhornio/longhorn-engine:{{ index build.tags 0}}

{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}

manifests:
  -
    image: longhornio/longhorn-engine:{{ index build.tags 0}}-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: longhornio/longhorn-engine:{{ index build.tags 0}}-arm64
    platform:
      architecture: arm64
      os: linux
