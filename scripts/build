#!/bin/bash
set -e

source $(dirname $0)/version

cd $(dirname $0)/..

mkdir -p bin
go build -tags "qcow" -ldflags \
	"-X main.Version=$VERSION \
	-X main.GitCommit=$GITCOMMIT \
	-X main.BuildDate=$BUILDDATE \
	-linkmode external -extldflags -static" \
	-o bin/longhorn ./app/engine
go build -o bin/longhorn-instance-manager ./app/instance-manager
